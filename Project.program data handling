#include <stdio.h>
#include <string.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};

int main() {
    struct Student s[100];
    int n, i;
    float total = 0, avg, max = 0, min = 100;
    int topperIndex = 0, lowIndex = 0;

    printf("=== Student Data Handling and Analysis System ===\n");
    printf("Enter number of students: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter details for Student %d:\n", i + 1);
        printf("Roll Number: ");
        scanf("%d", &s[i].roll);
        printf("Name: ");
        scanf("%s", s[i].name);
        printf("Marks: ");
        scanf("%f", &s[i].marks);

        total += s[i].marks;

        if (s[i].marks > max) {
            max = s[i].marks;
            topperIndex = i;
        }

        if (s[i].marks < min) {
            min = s[i].marks;
            lowIndex = i;
        }
    }

    avg = total / n;

    printf("\n--- Student Data Summary ---\n");
    printf("Total Students: %d\n", n);
    printf("Class Average: %.2f\n", avg);
    printf("Highest Marks: %.2f (%s)\n", s[topperIndex].marks, s[topperIndex].name);
    printf("Lowest Marks: %.2f (%s)\n", s[lowIndex].marks, s[lowIndex].name);

    printf("\n--- All Student Records ---\n");
    printf("Roll\tName\tMarks\n");
    for (i = 0; i < n; i++) {
        printf("%d\t%s\t%.2f\n", s[i].roll, s[i].name, s[i].marks);
    }

    return 0;
}
